@page
@model ProfileImageModel
@{
    ViewData["Title"] = "Change your Profile Image";
    ViewData["ActivePage"] = ManageNavPages.Profile;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger-custom" role="alert"></div>
            <div class="form-floating mb-3">
                @if(string.IsNullOrEmpty(Model.ProfileImageName))
                {
                    <img src="~/Media/ProfileImages/default.png" alt="Profile Image" class="img-fluid pfp-rounded-circle"/>
                }
                else
                {
                    <img src="@Model.ProfileImageName" alt="Profile Image" class="img-fluid pfp-big-rounded-circle"/>
                }
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.profileImage" class="text-danger-custom" />
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg profile-btn">Upload Image</button>
        </form>
        <a id="back-button" class="profile-link" asp-page="Profile">Return to your Profile</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
