@page
@model BiographyModel
@{
    ViewData["Title"] = "Edit your Biography";
    ViewData["ActivePage"] = ManageNavPages.Profile;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger-custom" role="alert"></div>
            <div class="form-floating mb-3">
                <textarea asp-for="Input.biography" class="form-control text-danger-custom profile-text-area" rows="10" cols="70" style="height:300px;" ></textarea>
                <label asp-for="Input.biography" class="form-label text-danger-custom">Biography</label>
                <span asp-validation-for="Input.biography" class="text-danger-custom"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg profile-btn">Save</button>
        </form>
        <a id="back-button" class="profile-link" asp-page="Profile">Return to your Profile</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
